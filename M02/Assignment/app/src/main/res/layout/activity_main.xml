<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_null_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_not_initialized" />

    <Button
        android:id="@+id/btn_not_initialized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uninitialized"
        app:layout_constraintTop_toBottomOf="@id/btn_null_pointer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_divide_by_0" />

    <Button
        android:id="@+id/btn_divide_by_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divide by 0"
        app:layout_constraintTop_toBottomOf="@id/btn_not_initialized"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_bad_cast"/>

    <Button
        android:id="@+id/btn_bad_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad Cast"
        app:layout_constraintTop_toBottomOf="@id/btn_divide_by_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>